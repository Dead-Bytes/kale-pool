{
  "name": "kale-pool-backend",
  "version": "1.0.0",
  "description": "KALE Pool Mining Backend API Service",
  "main": "src/server.ts",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "start": "bun run src/server.ts",
    "build": "bun build src/server.ts --outdir=dist --target=bun",
    "test": "bun test",
    "lint": "tsc --noEmit",
    "db:migrate": "psql $DATABASE_URL -f ../Shared/database/migrations/001_initial.sql"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@stellar/stellar-sdk": "^12.1.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "pg": "^8.11.3",
    "pino-pretty": "^13.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "typescript": "^5.2.2",
    "bun-types": "latest"
  },
  "keywords": [
    "kale",
    "mining",
    "pool",
    "stellar",
    "blockchain",
    "crypto"
  ],
  "author": "KALE Pool Mining Team",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  }
}
