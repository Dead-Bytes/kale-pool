{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../Shared/*"]
    },
    "types": ["bun-types", "node"]
  },
  "include": [
    "src/**/*",
    "../Shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
